<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("models.stock.id", :default => model_class.human_attribute_name(:id)) %></th>
      <th><%= t("models.stock.symbol", :default => model_class.human_attribute_name(:symbol)) %></th>
      <th><%= t("models.stock.name", :default => model_class.human_attribute_name(:name)) %></th>
      <th><%= t("models.stock.price", :default => model_class.human_attribute_name(:price)) %></th>
      <th><%= t("models.stock.created_at", :default => model_class.human_attribute_name(:created_at)) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= link_to stock.id, stock_path(stock) %></td>
        <td><%= stock.symbol %></td>
        <td><%= stock.name %></td>
        <td><%= stock.price %></td>
        <td><%= stock.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stock_path(stock), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stock_path(stock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stock_path,
            :class => 'btn btn-primary' %>
