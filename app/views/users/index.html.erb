<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("models.user.id", :default => model_class.human_attribute_name(:id)) %></th>
      <th><%= t("models.user.first_name", :default => model_class.human_attribute_name(:first_name)) %></th>
      <th><%= t("models.user.last_name", :default => model_class.human_attribute_name(:last_name)) %></th>
      <th><%= t("models.user.dob", :default => model_class.human_attribute_name(:dob)) %></th>
      <th><%= t("models.user.email", :default => model_class.human_attribute_name(:email)) %></th>
      <th><%= t("models.user.address", :default => model_class.human_attribute_name(:address)) %></th>
      <th><%= t("models.user.city", :default => model_class.human_attribute_name(:city)) %></th>
      <th><%= t("models.user.state", :default => model_class.human_attribute_name(:state)) %></th>
      <th><%= t("models.user.created_at", :default => model_class.human_attribute_name(:created_at)) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr onclick="location.href='<%= portfolios_path %>'">
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.dob.to_time.strftime('%m/%d/%Y')  %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p')  %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
